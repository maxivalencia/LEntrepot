{% extends 'base4.html.twig' %}

{% block title %}Liste des Promotions{% endblock %}

{% block contenue %}
    <h1>Liste des promotions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Photo</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr>
                <td>{{ promotion.id }}</td>
                <td>{{ promotion.photo }}</td>
                <td>{{ promotion.nom }}</td>
                <td>
                    <a href="{{ path('promotion_show', {'id': promotion.id}) }}">voir</a>
                    <a href="{{ path('promotion_edit', {'id': promotion.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(promotions) }}
    </div>

    {# <a href="{{ path('promotion_new') }}">Nouveau</a> #}
{% endblock %}
