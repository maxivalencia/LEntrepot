{% extends 'base4.html.twig' %}

{% block title %}Liste des Commentaires{% endblock %}

{% block contenue %}
    <h1>Liste des Commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commentaire in commentaires %}
            <tr>
                <td>{{ commentaire.id }}</td>
                <td>{{ commentaire.commentaire }}</td>
                <td>
                    <a href="{{ path('commentaire_show', {'id': commentaire.id}) }}">voir</a>
                    <a href="{{ path('commentaire_edit', {'id': commentaire.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucun enregistrement trouver</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(commentaires) }}
    </div>

    <a href="{{ path('commentaire_new') }}">Nouveau</a>
{% endblock %}
