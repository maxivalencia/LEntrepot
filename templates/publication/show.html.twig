{% extends 'base4.html.twig' %}

{% block title %}Information Publication{% endblock %}

{% block contenue %}
    <h1>Information Publication</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Image</th>
                <td>{# <img src="/image/{{ publication.image }}" alt="image de la publication" width="500px"> #}
                    {% for image in images %}
                        <img src="/image_publication/{{ image.nomServer }}" alt="image de la publication" width="500px">
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Publication</th>
                <td>{{ publication.publication }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ publication.date ? publication.date|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('publication_index') }}">Retour</a>

    <a href="{{ path('publication_edit', {'id': publication.id}) }}">Modifier</a>

    {{ include('publication/_delete_form.html.twig') }}
{% endblock %}
